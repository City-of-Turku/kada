name = DriveTurku
description = Responsive DriveTurku theme.
base theme = omega
screenshot = screenshot.png
engine = phptemplate
core = 7.x

; ========================================
; Stylesheets
; ========================================
stylesheets[all][] = css/driveturku.normalize.css
stylesheets[all][] = css/driveturku.hacks.css
stylesheets[all][] = css/driveturku.styles.css
stylesheets[all][] = css/driveturku.no-query.css

; ========================================
; Scripts
; ========================================
scripts[] = js/driveturku.behaviors.js

; ========================================
; Regions
; ========================================
regions[emergency_messages] = Emergency messages
regions[before_header] = Before header
regions[branding] = Branding
regions[navigation_top] = Navigation top
regions[navigation] = Navigation
regions[header_top] = Header top
regions[header] = Header
regions[top_carousel] = Turkucalendar carousel
regions[top_tabs] = Turkucalendar tabs
regions[highlighted] = Highlighted
regions[help] = Help
regions[tools_container] = Tools container
regions[content] = Content
regions[sidebar_first] = Sidebar first
regions[sidebar_second] = Sidebar second
regions[before_content] = Before content
regions[after_content] = After content
regions[before_footer] = Before footer
regions[footer] = Footer
regions[after_footer] = After footer

regions[event_mosaic] = Turkucalendar event mosaic
regions[event_list] = Turkucalendar event list
regions[event_map] = Turkucalendar event map
; Filters need to be after content region(s) for facets to work
regions[filters] = Turkucalendar event filters

; ========================================
; Breakpoints
; ========================================
breakpoints[desktop] = (min-width: 1138px)
breakpoints[smalldesktop] = (min-width: 769px)
breakpoints[tablet] = (min-width: 551px)
breakpoints[phablet] = (min-width: 321px)
breakpoints[mobile] = (min-width: 0px)

